<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>

<BorderPane fx:id="root" prefHeight="650.0" prefWidth="600.0" stylesheets="@LightTheme.css" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="control.SettingsController">
   <top>
      <HBox alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
            <Label styleClass="label-header" text="Settings">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </Label>
            <HBox HBox.hgrow="ALWAYS" />
            <Button mnemonicParsing="false" onAction="#exit" prefHeight="30.0" prefWidth="30.0" styleClass="sleek-button" text="x">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </top>
   <center>
      <SplitPane dividerPositions="0.5" BorderPane.alignment="CENTER">
        <items>
          <AnchorPane fx:id="sidePane" maxWidth="150.0" minHeight="0.0" minWidth="0.0" prefWidth="100.0">
               <children>
                  <ListView fx:id="settingsList">
                     <padding>
                        <Insets left="8.0" />
                     </padding>
                  </ListView>
               </children>
            </AnchorPane>
            <StackPane fx:id="mainPane" prefHeight="150.0" prefWidth="200.0" />
        </items>
      </SplitPane>
   </center>
</BorderPane>
